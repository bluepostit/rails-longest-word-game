<div class="container m-4">
  <h1>New Game</h1>

  <div class="letters mb-3">
    <% @letters.each do |letter| %>
    <div class="letter"><%= letter.capitalize %></div>
    <% end %>
  </div>


  <form action="<%= score_path %>" method="post">
    <div class="form-group">
      <label for="word">What is the longest word you can find?</label>
      <div class="form-row">
        <div class="col">
          <div class="input-group">
            <input type="text" name="word" class="form-control" required>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <%= hidden_field_tag 'letters', @letters.join %>
            <div class="input-group-append">
              <input type="submit" value="Play">
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
